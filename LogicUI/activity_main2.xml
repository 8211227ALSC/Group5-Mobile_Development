<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity2">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        tools:ignore="UselessParent">


        <ImageButton
            android:id="@+id/close_button"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/x"
            tools:ignore="ContentDescription,SpeakableTextPresentCheck" />

        <ImageView
            android:id="@+id/b_button"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_marginStart="75dp"
            android:layout_marginTop="55dp"
            android:background="@drawable/color2"
            tools:ignore="ContentDescription,SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_marginTop="320dp"
            android:text="Choose the object that uses these colors."
            android:textAlignment="center"
            android:textSize="20sp"
            android:fontFamily="@font/gontserrat"/>

        <ImageButton
            android:id="@+id/option1_button"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginStart="35dp"
            android:layout_marginTop="390dp"
            android:background="@drawable/color_opt5"/>

        <ImageButton
            android:id="@+id/option2_button"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginStart="220dp"
            android:layout_marginTop="390dp"
            android:background="@drawable/color_opt7"/>

        <ImageButton
            android:id="@+id/option3_button"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginStart="35dp"
            android:layout_marginTop="550dp"
            android:background="@drawable/color_opt6"/>

        <ImageButton
            android:id="@+id/option4_button"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginStart="220dp"
            android:layout_marginTop="550dp"
            android:background="@drawable/color_opt8"/>

    </RelativeLayout>

</RelativeLayout>