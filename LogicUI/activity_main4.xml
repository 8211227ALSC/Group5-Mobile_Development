<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity4">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        tools:ignore="UselessParent">


        <ImageButton
            android:id="@+id/close_button"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/x"
            tools:ignore="ContentDescription,SpeakableTextPresentCheck" />

        <ImageView
            android:id="@+id/b_button"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_marginStart="75dp"
            android:layout_marginTop="55dp"
            android:background="@drawable/shapes"
            tools:ignore="ContentDescription,SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="69dp"
            android:layout_marginTop="320dp"
            android:text="Find the missing shape."
            android:textAlignment="center"
            android:textSize="22sp"
            android:fontFamily="@font/gontserrat"/>

        <ImageButton
            android:id="@+id/option1_button"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginStart="35dp"
            android:layout_marginTop="370dp"
            android:background="@drawable/heart_opt1"/>

        <ImageButton
            android:id="@+id/option2_button"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginStart="220dp"
            android:layout_marginTop="370dp"
            android:background="@drawable/heart_opt2"/>

        <ImageButton
            android:id="@+id/option3_button"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginStart="125dp"
            android:layout_marginTop="540dp"
            android:background="@drawable/heart_opt3"/>

    </RelativeLayout>

</RelativeLayout>