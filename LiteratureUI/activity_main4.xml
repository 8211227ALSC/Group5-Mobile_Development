<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity4">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        tools:ignore="UselessParent">


        <ImageButton
            android:id="@+id/close_button"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/x"
            tools:ignore="ContentDescription,SpeakableTextPresentCheck" />

        <ImageButton
            android:id="@+id/b_button"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_marginStart="70dp"
            android:layout_marginTop="45dp"
            android:background="@drawable/b2"
            tools:ignore="ContentDescription,SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="35dp"
            android:layout_marginTop="305dp"
            android:text="Tap the things that start with the letter B."
            android:textAlignment="center"
            android:textSize="20sp"
            android:fontFamily="@font/gontserrat"/>

        <ImageButton
            android:id="@+id/option1_button"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="380dp"
            android:background="@drawable/bus"/>

        <ImageButton
            android:id="@+id/option2_button"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginStart="200dp"
            android:layout_marginTop="380dp"
            android:background="@drawable/balloon"/>

        <ImageButton
            android:id="@+id/option3_button"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="540dp"
            android:background="@drawable/books"/>

        <ImageButton
            android:id="@+id/option4_button"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginStart="200dp"
            android:layout_marginTop="540dp"
            android:background="@drawable/bear"/>


    </RelativeLayout>

</RelativeLayout>